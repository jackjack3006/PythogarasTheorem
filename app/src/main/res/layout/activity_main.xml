<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PYTHOGARAS THEOREM"
        android:textColor="#FF018786"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-----------------------------"
        android:textColor="#FF03DAC5"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Base"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:background="#FFC4C2C2"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#BC7E21"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Base"
        android:padding="10dp"
        android:background="#FF595454"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/Height"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:background="#FFC4C2C2"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#BC7E21"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#FF595454"
        android:textColor="#FFFFFF"
        android:text="Enter Height"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="CALCULATE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Hypo"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#BC7E21"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hypotenuse"
        android:padding="10dp"
        android:background="#FF595454"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

</LinearLayout>